{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@synclets": ["./index.ts"],
      "@synclets/@types": ["./@types/index.d.ts"],

      "@synclets/utils": ["./utils/index.ts"],
      "@synclets/@types/utils": ["./@types/utils/index.d.ts"],

      "@synclets/connector/fs": ["./connector/fs/index.ts"],
      "@synclets/@types/connector/fs": ["./@types/connector/fs/index.d.ts"],

      "@synclets/connector/memory": ["./connector/memory/index.ts"],
      "@synclets/@types/connector/memory": [
        "./@types/connector/memory/index.d.ts"
      ],

      "@synclets/transport/memory": ["./transport/memory/index.ts"],
      "@synclets/@types/transport/memory": [
        "./@types/transport/memory/index.d.ts"
      ]
    }
  }
}
