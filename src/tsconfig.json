{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@cloudflare/workers-types"],
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@synclets": ["./index.ts"],
      "@synclets/utils": ["./utils/index.ts"],
      "@synclets/memory": ["./memory/index.ts"],
      "@synclets/pglite": ["./pglite/index.ts"],
      "@synclets/sqlite3": ["./sqlite3/index.ts"],
      "@synclets/tinybase": ["./tinybase/index.ts"],

      "@synclets/@types": ["./@types/index.d.ts"],
      "@synclets/@types/utils": ["./@types/utils/index.d.ts"],
      "@synclets/@types/browser": ["./@types/browser/index.d.ts"],
      "@synclets/@types/connector/database": [
        "./@types/connector/database/index.d.ts"
      ],
      "@synclets/@types/pglite": ["./@types/pglite/index.d.ts"],
      "@synclets/@types/sqlite3": ["./@types/sqlite3/index.d.ts"],
      "@synclets/@types/fs": ["./@types/fs/index.d.ts"],
      "@synclets/@types/tinybase": ["./@types/tinybase/index.d.ts"],
      "@synclets/@types/durable-object": ["./@types/durable-object/index.d.ts"],
      "@synclets/@types/memory": ["./@types/memory/index.d.ts"],
      "@synclets/@types/ws": ["./@types/ws/index.d.ts"]
    }
  }
}
