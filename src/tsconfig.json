{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@synclets": ["./index.ts"],
      "@synclets/*": ["./*/index.ts"],
      "@synclets/@types": ["./@types/index.d.ts"],
      "@synclets/@types/*": ["./@types/*/index.d.ts"]
    }
  }
}
