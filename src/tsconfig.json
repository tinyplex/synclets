{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "removeComments": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "composite": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@synclets": ["./index.ts"],
      "@synclets/utils": ["./utils/index.ts"],
      "@synclets/connector/memory": ["./connector/memory/index.ts"],
      "@synclets/transport/memory": ["./transport/memory/index.ts"],

      "@synclets/@types": ["./@types/index.d.ts"],
      "@synclets/@types/utils": ["./@types/utils/index.d.ts"],
      "@synclets/@types/connector/browser": [
        "./@types/connector/browser/index.d.ts"
      ],
      "@synclets/@types/connector/fs": ["./@types/connector/fs/index.d.ts"],
      "@synclets/@types/connector/memory": [
        "./@types/connector/memory/index.d.ts"
      ],
      "@synclets/@types/connector/pglite": [
        "./@types/connector/pglite/index.d.ts"
      ],
      "@synclets/@types/server/stateless-ws": [
        "./@types/server/stateless-ws/index.d.ts"
      ],
      "@synclets/@types/transport/memory": [
        "./@types/transport/memory/index.d.ts"
      ],
      "@synclets/@types/transport/ws": ["./@types/transport/ws/index.d.ts"]
    }
  }
}
